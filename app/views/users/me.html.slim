= @user.email

.ui.text.container
  .ui.three.statistics
    .statistic
      .value
        = @entries.count
      .label
        | Entries
    .statistic
      .value
        | 1111
      .label
        | Total Likes
    .statistic
      .value
        = @entries.inject(0) { |sum, entry| sum + entry.view }
      .label
        | Total Views

.ui.text.container
  .ui.divided.items
    h3.ui.header 記事一覧
    - @entries.each do |entry|
      .item
        .image
          = image_tag entry.image.to_s
        .content
          = link_to entry.title, entry_path(entry), class: 'header'
          .meta
            span.date = distance_of_time_in_words_to_now(entry.created_at)
          .description
            = truncate(entry.body, length: 150)
          .extra
            - entry.tags.each do |tag|
              = link_to tag.name, entries_path(tag: tag.name), class: 'ui label'

.ui.text.container
  .ui.feed
    h3.ui.dividing.header フィード
    - @entries.each do |entry|
      .event
        .label
          i.pencil.icon
        .content
          .summary
            | 記事「
            b = entry.title
            | 」を公開しました。
            .date = distance_of_time_in_words_to_now(entry.created_at)
