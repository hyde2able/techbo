.comment id="#{comment.id}"
  .avatar
    - if comment.user_id.present?
      = link_to user_path(comment.user_id) do
        = image_tag comment.avatar
    - else
      = image_tag comment.avatar
  .content
    .author
      = comment.from
    .metadata
      .date = distance_of_time_in_words_to_now(comment.created_at)
    .text
      = comment.body
    .actions
      a.reply data-reply="#{comment.from}" Reply
